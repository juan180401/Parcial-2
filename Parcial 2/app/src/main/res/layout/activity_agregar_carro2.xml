<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarCarro2">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="28dp"
        android:text="AGREGAR NUEVO AUTO"
        android:textColor="#0543FB"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/modelo"
        android:layout_width="278dp"
        android:layout_height="40dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="104dp"
        android:ems="10"
        android:hint="Modelo:"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/vin"
        android:layout_width="278dp"
        android:layout_height="40dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="152dp"
        android:ems="10"
        android:hint="Numero De Vin:"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/chasis"
        android:layout_width="278dp"
        android:layout_height="40dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="200dp"
        android:ems="10"
        android:hint="Numero De Chasis:"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/motor"
        android:layout_width="278dp"
        android:layout_height="40dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="248dp"
        android:ems="10"
        android:hint="Numero De Motor:"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/asientos"
        android:layout_width="278dp"
        android:layout_height="40dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="292dp"
        android:ems="10"
        android:hint="Numero De Asientos:"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/año"
        android:layout_width="278dp"
        android:layout_height="40dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="344dp"
        android:ems="10"
        android:hint="Año:"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/capaasien"
        android:layout_width="278dp"
        android:layout_height="40dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="396dp"
        android:ems="10"
        android:hint="Capacidad De Asientos:"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/precio"
        android:layout_width="278dp"
        android:layout_height="40dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="444dp"
        android:ems="10"
        android:hint="Precio:"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/urimg"
        android:layout_width="278dp"
        android:layout_height="40dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="492dp"
        android:ems="10"
        android:hint="URI IMG:"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/descr"
        android:layout_width="278dp"
        android:layout_height="40dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="540dp"
        android:ems="10"
        android:hint="Descripcion:"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="604dp"
        android:onClick="guardarauto"
        android:text="GUARDAR "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/uslog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="65dp"
        android:text="TextView"
        android:textColor="#FF0101"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>